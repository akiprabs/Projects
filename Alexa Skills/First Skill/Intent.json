
/*
Intent Schema
In the below example the intent is "MyColorIsIntent", which would be recognized when you call out to alexa pharses associated with that intent
see the pharses associated with the intent below
*/

{
  "intents": [
    {
      "intent": "MyColorIsIntent",
      "slots": [
        {
          "name": "color",
          "type": "LITERAL"
        }
      ]
    },
    {
      "intent": "WhatsMyColorIntent",
	  "slots": []
    }
  ]
}



// Call phrases which Alexa will understand

